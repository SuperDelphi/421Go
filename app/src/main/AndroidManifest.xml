<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a421go">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:name=".metier.GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="421Go"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:screenOrientation="portrait" android:name=".views.RankingActivity"></activity>
        <activity android:screenOrientation="portrait" android:name=".views.GameActivity" />
        <activity android:screenOrientation="portrait" android:name=".views.NewGameActivity" />
        <activity android:screenOrientation="portrait" android:name=".views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>